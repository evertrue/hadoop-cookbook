<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration>
<% node['hadoop'][@conf_file].each do |name,value| -%>
  <property>
    <name><%= name %></name>
    <value><%= [Array, Chef::Node::ImmutableArray].include?(value.class) ? value.join(',') : value %></value>
  </property>
<% end -%>
</configuration>
